<%= render "shared/navbar" %>

<div class="container text-center">

  <%= form_with(url:search_posts_path,local: true,method: :get, class:"input-group") do |form|%>
    <%= form.text_field :keyword, class:"form-control" ,placeholder:"キーワード入力欄"%>
    <span class="input-group-btn ">
      <%=form.submit "検索",class:"btn btn-default"%>
    </span>
  <% end%>

  <div>
    <div class="page-info">
      <%= page_entries_info @posts %>
    </div>
    <div class="card-deck">
      <div class="row">
        <div class="col-sm-3"></div>
      </div>
      <% @posts.each do |post| %>
        <% if post.user_id == current_user.id%>
          <div class="col-sm-3">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
              <div class="card-header"><%= post.created_at.to_s(:datetime_jp)%></div>
              <div class="card-body text-dark">
                <h5 class="card-title"><%= post.body%></h5>
              </div>
            </div>
          </div>
        <% end%>
      <%end%>
    </div>
  </div>
  <div class="pagination">
    <%= paginate @posts %>
  </div>
  <div class='mypage-btn'>
    <span class='side-btn-text'>マイページ</span>
    <a href="">
      <%= image_tag 'mypage.png' , size: '185x50' ,class: "side-btn-icon" %>
    </a>
  </div>
  <div class='search-btn'>
    <span class='side-btn-text'>ラベリット!</span>
    <a href="/posts/new">
      <%= image_tag 'label.png' , size: '185x50' ,data: {"turbolinks" => false},class: "side-btn-icon" %>
    </a>
  </div>
</div>